#! /bin/sh

chosen=$(printf "ï€‘  Power Off\nï€  Restart\nï††  Suspend\nï‹œ  Hibernate\nó°ƒ  Log Out\nï€£  Lock" | rofi -p "ğŸ˜´ Powermenu:" -dmenu -i)

lock() {
  i3lock
}

case "$chosen" in
  "ï€‘  Power Off") poweroff ;;
  "ï€  Restart") reboot ;;
  "ï††  Suspend") lock && systemctl suspend-then-hibernate ;;
  "ï‹œ  Hibernate") lock && systemctl hibernate ;;
  "ó°ƒ  Log Out") i3-msg exit ;;
  "ï€£  Lock") lock ;;
  *) exit 1 ;;
